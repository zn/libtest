@model TakeBookViewModel

<div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form asp-action="Take" method="post">
        <div class="form-group">
            <label asp-for="Readers">Выберите свой id</label>
            <select asp-for="Reader.Id" 
                    asp-items="@(new SelectList(Model.Readers,"Id","Name"))"></select>
        </div>
        <b>Книга:</b>@Model.Book.Title
        <div class="form-group">
            <button type="submit" class="btn btn-success">Взять</button>
        </div>
        <input type="hidden" asp-for="Book.Id" value="@Model.Book.Id">
    </form>
</div>